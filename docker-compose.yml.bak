version: '3.9'

services:
  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
      - DEBUG=1
    depends_on:
      - db

  db:
    image: postgres:16-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: energymap
      POSTGRES_USER: energymap
      POSTGRES_PASSWORD: supersecret123   # ← можешь поменять на свой
    ports:
      - "5432:5432"   # опционально — для подключения pgAdmin с Windows

volumes:
  postgres_data:
